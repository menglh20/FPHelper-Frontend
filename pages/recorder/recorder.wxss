/* container 布局容器 */
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  justify-content: space-between;
}

/* 录制时间显示 */
.recording-timer {
  position: absolute;
  top: 10px;
  left: 50%;
  transform: translateX(-50%);
  background-color: rgba(0, 0, 0, 0.5);
  padding: 5px 10px;
  border-radius: 5px;
  color: #fff;
  font-size: 16px;
  z-index: 10;
}

/* footer 底部按钮区域 */
.footer {
  display: flex;
  justify-content: space-around;
  padding: 10px;
  background-color: #f5f5f5;
}

button {
  padding: 10px 20px;
  font-size: 16px;
}

/* 提示文字样式 */
.text-prompt {
  position: absolute;
  bottom: 20%;
  width: 100%;
  text-align: center;
  font-size: 18px;
  color: #ffffff;
  background-color: rgba(0, 0, 0, 0.5);
  padding: 10px;
  border-radius: 10px;
