/* 页面背景 */
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: linear-gradient(to bottom, #eef2f6, #f4f7fc); /* 渐变背景 */
}

.scrollarea {
  flex: 1;
  overflow-y: scroll;
}

/* 容器样式 */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 20px;
}

/* 标题样式 */
.header {
  text-align: center;
  margin-bottom: 40px;
}

.title {
  font-size: 24px;
  font-weight: bold;
  color: #2c3e50;
}

.subtitle {
  font-size: 16px;
  color: #666;
  margin-top: 10px;
}

/* 按钮容器样式 */
.button-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20px; /* 按钮之间的间距 */
  width: 100%;
}

/* 按钮样式 */
.button-item {
  width: 80%; /* 按钮宽度占屏幕宽度的 80% */
}

.action-button {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #1aad19; /* 按钮颜色：微信绿色 */
  color: white;
  border-radius: 12px; /* 圆角按钮 */
  padding: 15px 10px;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); /* 阴影效果 */
  font-size: 16px;
}

.action-button:active {
  background-color: #179b16; /* 按下时颜色变化 */
}

/* 按钮内的图标样式 */
.button-icon {
  width: 40px; /* 图标大小 */
  height: 40px;
  margin-bottom: 10px; /* 图标和文本的间距 */
}

/* 按钮内的文本样式 */
.button-text {
  font-size: 16px;
  font-weight: bold;
}