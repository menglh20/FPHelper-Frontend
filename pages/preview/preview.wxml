<!--pages/preview/preview.wxml-->
<view class="preview-container">
  <!-- 视频预览部分 -->
  <view class="video-preview">
    <video src="{{uploadedVideo}}" controls autoplay loop class="preview-video">
    </video>
  </view>

  <!-- 上传按钮 -->
  <view class="upload-button">
    <button bindtap="UploadVideo" type="primary" class="submit-button">
      <text>确认上传</text>
    </button>
  </view>

  <view class="upload-button">
    <button bindtap="Back" type="primary" class="submit-button">
      <text>重新选择</text>
    </button>
  </view>
</view>