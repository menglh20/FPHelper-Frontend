/* pages/preview/preview.wxss */
.preview-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 20px;
  height: 100%; /* 填满页面 */
  background-color: #f8f8f8;
}

.video-preview {
  width: 100%;
  height: auto;
  margin-bottom: 20px;
}

.preview-video {
  width: 100%;
  max-height: 300px;
  border-radius: 10px;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
  background-color: black;
}

.upload-button {
  width: 100%;
  margin-top: 20px;
}

.submit-button {
  width: 100%;
  height: 50px;
  font-size: 18px;
  font-weight: bold;
  color: #ffffff;
  background-color: #007aff;
  border-radius: 8px;
  text-align: center;
  line-height: 50px;
}